// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("POSTGRESQL_URL")
  relationMode = "prisma"
}

model Account {
  id                String  @id @default(cuid()) @unique
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid()) @unique
  sessionToken String   @unique
  userId       String
  userRole     String?
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid()) @unique
  name          String
  email         String?    @unique
  emailVerified Boolean?
  password      String?
  role          String    @default("user")

  image    String?
  accounts Account[]
  sessions Session[]
}

model Projects {
  id            String   @id @default(cuid()) @unique
  title         String
  description   String
  image         String
  url           String
  skills        Skills[]
  visible       Boolean  @default(false)
  order         Int      @default(0)
}

model Skills {
  id            String   @id @default(cuid()) @unique
  name          String
  projects      Projects[]
  image         String?
  visible       Boolean  @default(false)
}

model Experience {
  id            String   @id @default(cuid()) @unique
  title         String
  location      String
  description   String
  icon          String
  date          String
  visible       Boolean  @default(false)
}
